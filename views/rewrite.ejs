<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--jqueryimport-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <title>Document</title>
    <script>
      const queryString = window.location.search;
      const urlParams = new URLSearchParams(queryString);
      const boardId = urlParams.get("boardId");

      $(document).ready(function () {
        get_detail();
      });
        //글 불러오기
      function get_detail() {
        $.ajax({
          type: "GET",
          url: `/api/board/${boardId}`,
          data: {},
          success: function (response) {
            let boardDetail = response["detail"];
            
            $("#author").val(boardDetail["author"]);
            $("#title").val(boardDetail["title"]);
            $("#contents").text(boardDetail["contents"]);
            
          },
        });
      }
      //수정
      function edit() {
        
        $.ajax({
          type: "PATCH",
          url: `/api/board/${boardId}`,
          data: {
            //바뀐 데이터
            title: $("#title").val(),
            author: $("#author").val(),
            contents: $("#contents").val(),
            password:$("#password").val(),
          },
          success: function (response) {
            if (response["result"] == "success") {
              alert("글이 수정 되었습니다.");
              window.location.href = "/";
            } else {
              alert("비밀번호가 다릅니다.");
            }
          },
        });
      }

      //삭제
      function adelete() {
        let password = $("#password").val()
        alert(password)
        $.ajax({
          type: "DELETE",
          url: `/api/board/${boardId}`,
          data: {
            'password' : password,
          },
          success: function(response) {
            console.log(response)
            if (response["result"]== "success") { //오타 수정
              alert('삭제되었습니다.') 
              window.location.href="/"
            }else {
              alert('비번 확인요망 ㅇㅇ')
            }
            }
        })
      }
     

    
    </script>
  </head>
  <body>
    <div>
      <h1>수정/삭제하기</h1>
    </div>
    <div>
      <label>아이디:</label><input type="text" id="author" />
      <span> 비밀번호: <input type="text" id="password" /></span>
    </div>
    <div><label>제목:</label><input type="text" id="title" size="100" /></div>
    <div class="wiriting-view-box">
      <div>
        <div>
          <textarea
            id="contents"
            rows="15"
            cols="100"
            style="resize: none"
          ></textarea>
        </div>
      </div>
    </div>
    <button onclick="edit()">수정완료</button> <button onclick=" adelete()">삭제하기</button>
  </body>
</html>
