<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--jqueryimport-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <title>Document</title>
    <style>
      table {
        width: 100%;
        border-top: 1px solid #444444;
        border-collapse: collapse;
      }

      th,
      td {
        border-bottom: 1px solid #444444;

        padding: 10px;
      }

      .button {
        margin-bottom: 30px;
      }
    </style>

    <script>
      function getSelf() {}
      $(document).ready(function () {
        // 토큰이 있을 경우 로그인 기능 hide
        if (localStorage.getItem("token")) {
          getSelf(function () {
            $("#logout").show();
            $("#login").hide();
          });
        } else {
          // 토큰이 없을 경우 게시글 작성 hide
          $("#post").hide();
        }
        show_board();
      });

      function show_board() {
        $.ajax({
          type: "GET",
          url: `/api/board`,
          data: {},
          success: function (response) {
            let board = response["board"];

            for (let i = 0; i < board.length; i++) {
              let title = board[i]["title"];
              let author = board[i]["author"];
              let date = new Date(board[i]["date"]).toLocaleString();

              let temp_html = `<tr>
                              <td><a href='/detail?boardId=${board[i]["_id"]}'>${title}</a></td>
                              <td>${author}</td>
                              <td>${date}</td>
                            </tr>`;
              //뻘짓했네..ㅎㅎ 망할
              $("#board-table").append(temp_html);
            }
          },
        });
      }

      function logout() {
        localStorage.clear();
        alert("안녕!");
        window.location.href = "/";
      }
    </script>
  </head>
  <body>
    <div>
      <button onclick="location.href='/write';" id="post">글쓰기</button>
      <button onclick="location.href='/login';" id="login">로그인</button>
      <button onclick="logout()" id="logout">로그아웃</button>
    </div>
    <div>
      <table id="board-table">
        <tbody>
          <tr>
            <td>제목</td>
            <td>작성자</td>
            <td>작성일</td>
          </tr>
        </tbody>
      </table>
    </div>
  </body>
</html>
